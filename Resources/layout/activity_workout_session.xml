<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp">

		<androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFreestyleWorkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

		<TextView
            android:id="@+id/txtNoExercises"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Please add exercises to start your workout"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#666666" />
	</FrameLayout>

	<Button
        android:id="@+id/btnAddExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Exercises" />

	<Button
        android:id="@+id/btnFinishWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Workout"
        android:layout_marginBottom="36dp" />

</LinearLayout>
